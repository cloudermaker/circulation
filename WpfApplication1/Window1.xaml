<Window x:Class="WpfApplication1.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Route" Height="400" Width="550" Background="Brown">
    <StackPanel >
        <TextBlock Name="textBox"></TextBlock>
        <Canvas Name="MainCanvas" Width="300" Height="300" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3,3,3,3" Background="LightYellow"> </Canvas >
        <Grid>
            <Button Height="23" HorizontalAlignment="Left" Margin="10,0,0,0" Name="button1" VerticalAlignment="Bottom" Width="75" Click="Button_clear">Clear</Button>
            <Button Height="23" HorizontalAlignment="Center" Margin="0,0,0,0" Name="button2" VerticalAlignment="Bottom" Width="75" Click="Button_next">Next</Button>
            <Button Height="23" HorizontalAlignment="Right" Margin="0,0,10,0" Name="button3" VerticalAlignment="Bottom" Width="75" Click="Button_exit">Close</Button>
        </Grid>                
    </StackPanel>
</Window>
